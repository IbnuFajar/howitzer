#!/usr/bin/env ruby

require 'rubygems' unless ENV['NO_RUBYGEMS']
require 'rubigen'

if %w(-v --version).include? ARGV.first
  require File.dirname(__FILE__) + "/../lib/howitzer"
  puts "#{File.basename($0)} #{Howitzer::VERSION}"
  exit(0)
end

require 'rubigen/scripts/generate'

require 'pp'
RubiGen::Base.use_application_sources!
RubiGen::Base.prepend_sources(*[
  RubiGen::PathSource.new(:app, File.join(File.dirname(__FILE__), "..", "app_generators"))
])

if ARGV[0] == "--install"
  ARGV.delete '--install'
  ARGV.each do |option|
    if %w[cucumber email pages tasks config].include? option
      RubiGen::Scripts::Generate.new.run([option])
    else
      puts "ERROR: no such generator with name: '#{option}' is available"
    end
  end
end
